@model MVC_EF_Start.Models.Candidate

@{
    ViewData["Title"] = "AddData";
}

<h2>AddData</h2>

<h4>Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddData">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label" ></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="party_code" class="control-label"></label>
                <input asp-for="party_code" class ="form-control" ></input>
            </div>
            <div class="form-group">
                <label asp-for="incumbent_challenge_full" class="control-label"></label>
                <input asp-for="incumbent_challenge_full" class="form-control" />
                <span asp-validation-for="incumbent_challenge_full" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="committee_id" class="control-label"></label>
                <input asp-for="committee_id" class ="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="zip" class="control-label"></label>
                <input asp-for="zip" class ="form-control"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewCandidates">Back to List</a>
</div>
