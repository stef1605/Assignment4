@model IEnumerable<MVC_EF_Start.Models.Candidate>

@{
    ViewData["Title"] = "ViewCandidates";
}

<h2>ViewCandidates</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="cinereousTable">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.incumbent_challenge_full)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.incumbent_challenge_full)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.candidate_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.candidate_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.candidate_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
